package __PACKAGE__;

public final class Main {
  private Main() {}

  static String greeting(String name) {
    return "Hello, " + name + "!";
  }

  public static void main(String[] args) {
    String who = args.length == 0 ? "Bazel Java" : String.join(" ", args);
    System.out.println(greeting(who));
  }
}
